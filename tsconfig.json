{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["es6"],
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "**/*.spec.ts","**/*.spec.js"]
}
